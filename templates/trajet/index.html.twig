{% extends 'base.html.twig' %}

{% block title %}TrajetController{% endblock %}


{% block body %}
<h1>liste des trajets</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">depart</th>
      <th scope="col">destination</th>
      <th scope="col">type</th>
   
    </tr>
  </thead>
  <tbody>
    {% for i in trajet%}
    <tr>
      <td>{{i.getDepart}}</td>
      <td>{{i.getDestination}}</td>
      <td>{{i.getType}}</td>
      <td>
      <div class="d-flex justify-content-between align-items-center">
      <div class="btn-group">
        <button type="button" class="btn btn-sm btn-outline-secondary">Afficher</button>
        <a href="{{path('app_edit_trajet', {'id': i.id})}}" class="btn btn-sm btn-outline-secondary">Modifer</a>
        <a href="{{path('app_delete_trajet', {'id': i.id})}}" class="btn btn-sm btn-outline-secondary" onclick="return confirm('Attention ce ci va supprimer le trajet')">Supprimer</a>
      </div>
      </div>
      
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>

{% endblock %}
